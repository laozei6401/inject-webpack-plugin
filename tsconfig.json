{
  "compileOnSave": true,
  "compilerOptions": {
    "allowJs": false,
    "target": "es6",
    "module": "CommonJS",
    "outDir": "./dist",
    "rootDir": "./src",
    "noImplicitAny": false,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationDir": "types",
    "baseUrl": "./src"
  },
  "exclude": ["node_modules", "types"]
}
